<% @page_title = "会員新規登録" %>
<h1><%= page_title %></h1>

<%= form_for @user, url: users_path do |f| %>
  <fieldset>
    <legend>ログイン</legend>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </p>

    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </fieldset>
<% end %>