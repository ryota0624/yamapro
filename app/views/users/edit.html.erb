<p>プロフィールの編集</p>
<p><%= link_to "マイページに戻る", mypages_path %></p>

<%= form_for @user, url: :user, html: { multipart: true } do |form| %>

  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>
    <p>職種
        <%= form.radio_button :business, 0 %>
        <%= form.label :business_0, "学生/専門学生" %>
        <%= form.radio_button :business, 1 %>
        <%= form.label :business_1, "社会人" %>
        <%= form.radio_button :business, 2 %>
        <%= form.label :business_2, "その他" %>
    </p>

      <%= form.fields_for :image do |imgf| %>
        <p>
          <%= imgf.label :uploaded_image %>
            <%= imgf.file_field :uploaded_image %>
            <% if !imgf.object.new_record? && imgf.object.errors.empty? %>
            <div>
              <%= user_image_tag @user, size: "60" %>
              <%= imgf.check_box :_destroy %>
              <%= imgf.label :_destroy %>
              <%= imgf.hidden_field :id %>
            </div>
            <% end %>
        </p>
      <% end %>

<% if false %>
      <tr>
        <th><%= form.label "母の年代" %></th>
        <td>
          <%= form.label :mother30, "30代" %>
          <%= form.check_box :mother30 %>
          <%= form.label :mother40, "40代" %>
          <%= form.check_box :mother40 %>
          <%= form.label :mother50, "50代" %>
          <%= form.check_box :mother50 %>
          <%= form.label :mother60, "60代" %>
          <%= form.check_box :mother60 %>
          <%= form.label :mother70, "70代以上" %>
          <%= form.check_box :mother70 %>
        </td>
      </tr>

      <tr>
        <th><%= form.label "住んでいる場所" %></th>
        <td>
          <%= form.label :moth, "実家" %>
          <%= form.check_box :mother30 %>
          <%= form.label :mother40, "一人暮らし" %>
          <%= form.check_box :mother40 %>
          <%= form.label :mother50, "下宿" %>
          <%= form.check_box :mother50 %>
        </td>
      </tr>
<% end %>

  <p><%= form.submit %></p>
<% end %>
