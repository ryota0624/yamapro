<div class="container">
  <div class="row">
    <% @essays.each_with_index do |essay,i| %>
    <div class="col s12 m8 l6">
      <div class="card small">
        <a href="/essays/<%= essay.id %>?page=1">
        <div class="card-image waves-effect waves-block waves-light">
        <%= image_tag(url_for(:controller => 'essays',:action => 'get_image', :id => @posts_img[i]), :class => "activator") %>
        </div>
        <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"><%= essay.title%></span>
        </div>  
        </a>
      </div>
    </div>
    <% end %>
  </div>
  <div class="page">
    <%= will_paginate @essays %>
  </div>
</div>