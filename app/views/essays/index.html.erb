<div class="dodai">
  <div class="yohaku">
    <a href="#" class="jyun_ima">新着順</a>/
    <a href="#">人気順</a>/
    <div class="minato_dai">
      <% @new_essays.each do |essay| %>
      <div class="minato_new">new!<br>
        <div class="minato_new_ko">
          <a href="/essays/<%= essay.id %>?page=1">
            <% if essay.user.image.present? %>
              <%= image_tag(url_for(:controller => 'users', :action => 'image', :id => essay.user.id), :size => '80x80',:class => 'tou_ti')%>
            <% else %>
              <%= image_tag '/images/sample_image.png', :size => '30x30' %>
            <% end %>
            <div class="mi_ti">
              <p class="mina_ti"><%= essay.title%></p>
            </div>
            <p class="mina_toko">
              <%= essay.text %>
            </p>
          </a>
        </div>
      </div>
      <% end %>
    </div>

  <div class="minato_dai">
    <% @essays.each do |essay| %>
    <div class="minato_ki_ko">
      <a href="/essays/<%= essay.id %>?page=1">
        <% if essay.user.image.present? %>
          <%= image_tag(url_for(:controller => 'users', :action => 'image', :id => essay.user.id), :size => '80x80',:class => 'tou_ti')%>
        <% else %>
          <%= image_tag '/images/sample_image.png', :size => '30x30' %>
        <% end %>
        <div class="mi_ti">
          <!-- <img src="./.jpg" class="tou_ti"> -->
          <%= essay.title.slice(0,14) %>
        </div>
        <p class="mina_toko">
          <%= essay.text.slice(0,20)+" ..." %>
        </p>
      </a>
    </div>
    <% end %>
    <div class="page">
      <%= will_paginate @essays %>
    </div>
  </div>
</div>
</div>
<div class="clear"></div>
